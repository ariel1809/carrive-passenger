<Configuration status="WARN">
    <Appenders>
        <File name="FileLogger" fileName="var/log/app.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} - %msg%n" />
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="FileLogger" />
        </Root>
    </Loggers>
</Configuration>
